{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "automerge": true,
  "prHourlyLimit": 5,
  "timezone": "Europe/Zurich",
  "reviewers": [
    "Janobob"
  ],
  "packageRules": [
    {
      "groupName": "Angular packages",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "@angular{/,}**"
      ],
      "automerge": true
    }
  ]
}
